<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/6.3/phpunit.xsd"    
        backupGlobals="false"
        backupStaticAttributes="false"
        bootstrap="vendor/autoload.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        processIsolation="false"
        stopOnFailure="false"
        syntaxCheck="false"
        debug="true">
    <testsuites>
        <testsuite name="Pes">
            <directory suffix="Test.php">Pes/tests/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="junit" target="C:\Users\pes2704\AppData\Local\Temp\nb-phpunit-log.xml" logIncompleteSkipped="false"/>
        <log type="testdox-html" target="Pes/reports/testdox.html"/>
        <log type="testdox-text" target="Pes/reportstestdox.txt"/>
    </logging>    
</phpunit>